# =================================
# ED Analytics - Environment Variables
# =================================
# ВАЖНО: Скопируйте этот файл в .env и замените все placeholder значения на реальные!

NODE_ENV=development

# PostgreSQL Database
POSTGRES_DB=ed_analytics
POSTGRES_USER=ed_user
POSTGRES_PASSWORD=your_postgres_password_here

DB_HOST=postgres
DB_PORT=5432
DB_NAME=ed_analytics
DB_USER=ed_user
DB_PASSWORD=your_db_password_here

# Neo4j Graph Database
NEO4J_AUTH=neo4j/your_neo4j_password_here
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=your_neo4j_password_here
NEO4J_URI=bolt://neo4j:7687

# Redis
REDIS_HOST=redis
REDIS_PORT=6379

# Ports
BACKEND_PORT=5000
BRAMA_PORT=5001
FRONTEND_PORT=3000

# Service URLs
BACKEND_URL=http://backend:5000
BACKEND_CORE_URL=http://brama:5001
DASHBOARD_BASE_URL=http://your_server_ip_here
VITE_API_URL=http://your_server_ip_here:5000

# Workers
WORKER_CONCURRENCY=2
MOCK_PROCESSING_TIME=15000

# JWT Authentication
# Сгенерируйте безопасные случайные строки длиной 64+ символов
JWT_SECRET=your_jwt_secret_here
JWT_REFRESH_SECRET=your_jwt_refresh_secret_here

# API Keys
# Сгенерируйте уникальные API ключи для защиты сервисов
BACKEND_CORE_API_KEY=your_backend_core_api_key_here
ALLOWED_API_KEY=your_allowed_api_key_here
TELEGRAM_BOT_API_KEY=your_telegram_bot_api_key_here

# Telegram Bot Token
# Получите токен от @BotFather в Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Data Configuration
DEFAULT_YEAR=2024


# API ключ для AITunnel (для доступа к DeepSeek)
# Получите ключ на https://aitunnel.ru
OPENAI_API_KEY=your_openai_api_key_here

# Модель DeepSeek для использования
# По умолчанию: deepseek-chat (DeepSeek v3.2)
DEEPSEEK_MODEL=deepseek-chat

# =================================
# Deployment Configuration
# =================================
# Настройки для деплоя на удаленный сервер
# Используются в скриптах: deploy.sh, upload-env.sh, restore-neo4j.sh, create-remote-user.sh

# IP адрес сервера для деплоя
SERVER_IP=your_server_ip_here

# Имя пользователя на сервере
SERVER_USER=appuser

# Путь к SSH ключу для подключения к серверу
# Примеры:
#   ~/.ssh/id_rsa
#   ~/.ssh/id_ed25519
#   ~/.ssh/your_key_name
SSH_KEY=~/.ssh/your_ssh_key_here

# Название папки проекта на сервере
PROJECT_DIR=ed_analytics
